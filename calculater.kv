<myroot>
    strings : strings
    orientation : 'vertical'
    TextInput:
        id : strings
        height : 200
        size_hint : (1,None)
        readonly : True
        disabled : True 
        font_size : 64
    
    GridLayout:
        rows : 5
        columns : 4
        padding : 10
        spacing : 10
        size_hint : (1,0.3)
        
        Button:
            text: "1"
            font_size : 26
            on_press : root.cal_symbol('1')
        Button:
            text: "2"
            font_size : 26
            on_press : root.cal_symbol('2')

        Button:
            text: "3"
            font_size : 26
            on_press : root.cal_symbol('3')
        Button:
            text: "+"
            font_size : 26
            on_press : root.cal_symbol('+')      
        Button:
            text: "4"
            font_size : 26
            on_press : root.cal_symbol('4')        
        Button:
            text: "5"
            font_size : 26
            on_press : root.cal_symbol('5')       
        Button:
            text: "6"
            font_size : 26
            on_press : root.cal_symbol('6')
        Button:
            text: "-"
            font_size : 26
            on_press : root.cal_symbol('-')
            
        Button:
            text: "7"
            font_size : 26
            on_press : root.cal_symbol('7')
        Button:
            text: "8"
            font_size : 26
            on_press : root.cal_symbol('8')
        Button:
            text: "9"
            font_size : 26
            on_press : root.cal_symbol('9')
        Button:
            text: "x"
            font_size : 26
            on_press : root.cal_symbol('*')
        Button:
            text: "0"
            font_size : 26
            on_press : root.cal_symbol('0')
        Button:
            text: "."
            font_size : 26
            on_press : root.cal_symbol('.')
        Button:
            text: "M+"
            font_size : 26
            on_press : root.adding()
        Button:
            text: "/"
            font_size : 26
            on_press : root.cal_symbol('/')


        Button:
            text: "c"
            font_size: 26
            on_press: root.clear()
        Button:
            text: "MRC"
            font_size: 26
            on_press: root.grand_total()
        Button:
            text: "can"
            font_size: 26
            on_press: root.black_space()
        Button:
            text: "="
            font_size: 26
            on_press: root.get_result()
            